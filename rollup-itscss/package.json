{
  "name": "rollup-itscss",
  "version": "1.0.0",
  "description": "Bundle JS files with Rollup and compile SCSS to css",
  "private": true,
  "scripts": {
    "prebuild": "run-p clean lint",
    "build": "cross-env NODE_ENV=production run-p build:*",
    "postbuild": "run-p optimize:*",
    "build:styles": "sass --source-map src/styles:dist/css",
    "build:scripts": "rollup --config",
    "clean": "npx rimraf dist/*",
    "dev": "run-p watch serve",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint src/styles/**",
    "optimize:styles": "csso dist/css/main.css --output dist/css/main.css --stat --source-map file",
    "serve": "npx browser-sync start --server --no-open --files 'index.html, dist'",
    "watch": "run-p watch:*",
    "watch:styles": "npm run build:styles -- --watch",
    "watch:scripts": "npm run build:scripts -- --watch"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-modules": "0.1.3",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "7.1.1",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "core-js": "3.6.5",
    "cross-env": "7.0.2",
    "csso-cli": "3.0.0",
    "dynamic-import-polyfill": "0.1.1",
    "eslint": "6.8.0",
    "eslint-config-vi": "10.8.0",
    "npm-run-all": "4.1.5",
    "rollup": "2.4.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-terser": "5.3.0",
    "sass": "1.26.3",
    "stylelint": "13.3.1",
    "stylelint-config-vi": "2.0.0"
  }
}
